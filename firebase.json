{
  "emulators": {
    "hosting": {
      "host": "127.0.0.1",
      "port": 5001
    },
    "ui": {
      "host": "127.0.0.1",
      "enabled": true
    }
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
